<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  	<%= link_to "Request Scheduler", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",    root_path %></li>
        <li><%= link_to "Help",    help_path %></li>
        <% if logged_in? %> 
          <!-- this is only if admin -->
          <% if current_user.admin? %>
            <li class="dropdown">
        		  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        			 Admin <b class="caret"></b>
        		  </a>
        		  <ul class="dropdown-menu">
      				  <li><%= link_to "Users", users_path %></li>
        			 <li><%= link_to "Merchants", merchants_path %></li>
              </ul>
            </li>
          <% end %>
          <!-- End of admin-only section -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Actions <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Request Center", '#' %></li>
              <li><%= link_to "My Account", user_path(current_user) %></li>
        		  <li class="divider"></li>
              <li>
                  <%= link_to "Log Out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>